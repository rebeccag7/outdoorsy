<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Outdoorsy</p>
			<div class="list-group-item active">Info 1</div>
			<div class="list-group-item">Info 2</div>
			<div class="list-group-item">Info 3</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= outdoorspace.image %>">
				<div class="caption-full">
					<h4 class="pull-right">$9.00/night</h4>
					<h4><a><%= outdoorspace.name %></a></h4>
					<p><%= outdoorspace.description %></p>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/outdoorspaces/<%= outdoorspace._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% outdoorspace.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= comment.text %>
							</p>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>
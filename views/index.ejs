<% include partials/header %>
	<div class="container">
		<header class="jumbotron">
			<div class="container">
		    	<h1>Welcome to Outdoorsy!</h1>
		    	<p>For the love of nature and the great outdoors.</p>
		    	<p>
		    		<a class="btn btn-primary btn-lg" href="/outdoorspaces/new">Add new outdoor space</a>
		    	</p>
	    	</div>
        </header>

        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
	        <% outdoorspaces.forEach(function(outdoorspace){ %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src="<%= outdoorspace.image %>">
						<div class="caption">
							<h4><%= outdoorspace.name %></h4>
						</div>
						<p>
							<a href="/outdoorspaces/<%= outdoorspace._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
				</div>
			<% }); %>
		</div>
    </div>

<% include partials/footer %>

